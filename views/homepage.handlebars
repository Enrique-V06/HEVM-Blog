{{#each articles as |article|}}

  <div class="row">

    <div class="container article-container">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="articleTitle text-uppercase" href="/article/{{article.id}}">{{article.title}}</a>
        </h2>
      </div>

      <div class="col-4">
        <p class="createdInf text-right">Created by
          {{article.user.username}}
          on
          {{format_date article.date_created}}
        </p>
      </div>
			</div>
    <div class="articleBody">
      <p class="text-center articleDesc">
        {{article.description}}
      </p>
    </div>
    </div>

  </div>

{{/each}}